# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=*

# Storage Configuration
# Set STORAGE_TYPE to 's3', 'mock', or 'auto' (default: 'auto')
# 'auto' will use S3 if credentials are available, otherwise MockStorage
STORAGE_TYPE=auto

# AWS S3 Configuration (required if using S3Storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-bucket-name

# Mock Storage Configuration (used when STORAGE_TYPE=mock or when S3 credentials are missing)
STORAGE_BASE_URL=https://mock-storage.example.com

